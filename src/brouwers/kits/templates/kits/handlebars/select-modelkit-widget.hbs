{% load handlebars static i18n %}{% hbs_verbatim %}
{{#each kits}}

    <div class="col-xs-12 col-sm-4 col-md-3 col-xl-2 preview" data-id="{{id}}">
        <input type="{{#if @root.isMulti}}checkbox{{else}}radio{{/if}}" name="{{@root.htmlname}}" value="{{id}}" id="__modelkit_{{id}}" {{#if @root.checked}}checked="checked"{{/if}}>
        <label for="__modelkit_{{id}}" title="{{name}}" class="thumbnail">
            {{#if box_image.small}}
                <img src="{{box_image.small}}" class="img-responsive">
            {{else}}
                <img src="{% static "images/thumb.png" %}" class="img-responsive">
            {{/if}}
            <span class="h5"><strong>{{name}} {{#if kit_number}}<small>{{kit_number}}</small>{{/if}}</strong></span>
        </label>
        <i class="fa fa-check fa-3x"></i>
    </div>

{{/each}}

{{#if page.hasNext}}
    <div class="col-xs-12 col-sm-4 col-md-3 col-xl-2 preview center-all">
        <button class="btn bg-main-blue" data-next="{{page.nextPageNumber}}">{% trans 'load more' %}</button>
        <i class="fa fa-pulse fa-spinner fa-4x"></i>
    </div>
{{/if}}
{% hbs_endverbatim %}
